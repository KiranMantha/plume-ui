{
    "compilerOptions": {
        "rootDir": "./",
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "ESNext",
        "lib": [
            "dom",
            "ESNext"
        ],
        "declaration": true,
        "inlineSourceMap": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "importHelpers": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "typeRoots": [
            "@types",
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}